.ui.main.stackable.grid
  .ui.eight.column
    = simple_form_for processing, as: :processing do |f|
      .fields
        = f.hidden_field :crop_x, id: 'crop_x'
        = f.hidden_field :crop_y, id: 'crop_y'
        = f.input :crop_size, collection: Processing::SIZES, as: :radio_buttons

      .fields
        = f.button :submit, t('crop')

  .ui.eight.column
    = image_tag processing.image_url.to_s

    javascript:
      $(document).ready(new CroppingService.position());
